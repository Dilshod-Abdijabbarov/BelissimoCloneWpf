<UserControl
    x:Class="BelissimoCloneWPF.FoodController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BelissimoCloneWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="150"
    Height="200"
    Background="Snow"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Image
                x:Name="FoodImage"
                Height="100"
                VerticalAlignment="Top"
                Source="Images/bellogo.png" />
            <TextBlock
                x:Name="FoodName"
                FontSize="20"
                FontWeight="Bold"
                Text="Food name" />
            <TextBlock x:Name="FoodDescription" Text="Description" />
        </StackPanel>
    </Grid>
</UserControl>
